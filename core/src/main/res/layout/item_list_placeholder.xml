<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="210dp"
        app:cardCornerRadius="8dp"
        android:elevation="1dp"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/light_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/imgPoster"
        android:layout_width="0dp"
        android:background="@drawable/bg_image_placeholder"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/txtTitleList"
        android:layout_width="150dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPoster"
        android:background="@color/light_grey"/>

    <View
        android:id="@+id/txtDate"
        android:layout_width="50dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/imgPoster"
        app:layout_constraintTop_toBottomOf="@id/txtTitleList"
        android:background="@color/light_grey"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardCornerRadius="17dp"
        app:layout_constraintEnd_toEndOf="@id/imgPoster"
        app:layout_constraintTop_toTopOf="@id/imgPoster"/>

    <View
        android:id="@+id/chipOne"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/imgPoster"
        app:layout_constraintTop_toBottomOf="@id/txtDate"
        android:background="@color/light_grey"/>
    <View
        android:id="@+id/chipTwo"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/chipOne"
        app:layout_constraintTop_toTopOf="@id/chipOne"
        app:layout_constraintBottom_toBottomOf="@id/chipOne"
        android:background="@color/light_grey"/>
</androidx.constraintlayout.widget.ConstraintLayout>